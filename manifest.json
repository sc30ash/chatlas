{
  "manifest_version": 3,
  "name": "Chatlas",
  "version": "1.0",
  "description": "Chat with any website using AI",
  "permissions": ["storage", "tabs", "webRequest", "webRequestBlocking", "sidePanel", "activeTab"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_title": "Open Chatlas",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}
